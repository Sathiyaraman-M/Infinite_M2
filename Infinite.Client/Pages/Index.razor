@page "/"
@attribute [AllowAnonymous]

<div class="page-wrapper">
    <div class="page-body">
        <div class="container-xl">
            <h1>Hello, world!</h1>
            <button type="button" class="btn btn-primary" @onclick="OpenToast">Click me!</button>
        </div>
    </div>
</div>

@code {

    private void OpenToast()
    {
        Toast.Add("Title", "This is a toast", Severity.Normal);
    }

}