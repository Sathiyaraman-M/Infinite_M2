@using System.Security.Claims
@using IdentityModel

<AuthorizeView>
    <Authorized>
        <a href="Personal/Settings" class="text-white">
            Hello, @(context.User.FindFirstValue(JwtClaimTypes.PreferredUserName))!
        </a>
        <button class="btn btn-light ms-2" @onclick="@(() => NavigationManager.NavigateToLogout("authentication/logout"))">Log Out</button>
    </Authorized>
    <NotAuthorized>
        <button class="btn btn-light" @onclick="@(() => NavigationManager.NavigateToLogin("authentication/login"))">Log In</button>
    </NotAuthorized>
</AuthorizeView>